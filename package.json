{
  "name": "supplier-relationship-management",
  "version": "1.0.0",
  "description": "AI-native Supplier Relationship Management Co-pilot",
  "private": true,
  "workspaces": [
    "apps/backend/*",
    "apps/frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev --workspace=suppliers-service",
    "dev:frontend": "echo 'Frontend not implemented yet'",
    "build": "npm run build --workspaces --if-present",
    "start": "npm run start:prod --workspace=suppliers-service",
    "test": "npm run test --workspaces --if-present",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}